{{- if eq .chezmoi.os "darwin" -}}
# homebrew/cask-fonts is deprecated, fonts are now in homebrew/cask
cask "font-fira-code-nerd-font"
# visual-studio-code is often useful, but user specifically asked for opencode
# We assume opencode is available via brew as requested.
tap "anomalyco/tap"
